<link rel="stylesheet" href="/css/header.css">

<header id="layout-header">
    <nav> 

      <div class="logo" >
            <a href="/">
              <div  id="img-logo" alt="connectUs" style="height: 100%; margin-top: 0%;" > </div>
            </a>
      </div>


      <div class="auth-links">
        <ul>
            <%if(locals.user){%>

              <li>
                  <button>
                  <a href="/users/profile/<%=user.id%>">
                    <%=user.name%>
                  </a>
                </button>
              </li>

              <li>
                  <button>
                  <a href="/users/sign-out">Sign Out</a>
                </button>
              </li>
    
            <%}else{%>

                <li>
                    <button>
                    <a href="/users/sign-in">Sign In</a>
                    </button>
                </li>


                <li>
                    <button>
                    <a href="/users/sign-up">Sign up</a>
                    </button>
                </li>


                <%}%>


        </ul>
      </div>

    </nav>

   
</header>