<link rel="stylesheet" href="/css/home.css">
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div id="home-container">

               <!-- ------------------------------------ -->
     <!-- if use logged in / signed in the show home page content -->

    <% if(locals.user){ %>
        <section id="sidebar">
            <%- include('sidebar') -%>
        </section>

        <section id="feed-posts">
            <div id="feed-posts-div">
                <h4>Posts</h4>

                <form action="/posts/create" id="new-post-form" type="reset" method="POST">
                    <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
                    <input type="submit" value="Post">
                </form>


                <div id="posts-list-container">

                    <ul>
                        <% for(post of posts){ %>

                            <%- include('_post') -%>

                                <%} %>
                    </ul>
                </div>

            </div>
        </section>


        <section id="user-friends">
            <h4 style="text-align: center;">Friends</h4>
            <% for(u of all_users){%>
                <div></div>
                <p>
                    <a href="/users/profile/<%= u.id %>" >
                        <img src="<%= u.avatar %>" height="30px" width="30px" style="border-radius:25px;">
                        <%= u.name %>
                    </a>
                </p>
                <% } %>
        </section>

        <% } %>

                      
                <!-- ------------------------------------ -->



</div>

        <!-- if user not logged in / signed in the show home landing page content -->
        <div class="container" >
        <% if(!locals.user){ %>
            <marquee scrollAmount="25" direction="right" height="100px" style="color: red; font-size: 30px; font-weight: bold; ">
                ConnectUs under development!
                </marquee>    
         <% } %>
        </div>


<script src="/js/home_post_comments.js"></script>

<script src="/js/home_posts.js"></script>

