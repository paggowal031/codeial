<link rel="stylesheet" href="/css/user_profile.css">
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<h4 style="padding: 5px;">
   <a href="/"> connectUs></a> Profile | <%=profile_user.name%>
</h4>


<div class="container">
    <div id="profileHeadingDiv" style=" width: 10%;">
        <img src="<%=profile_user.avatar%>" alt="<%=user.name%>" style="margin-left: 10%; border-radius: 20px;" width="100">

        <!-- <h6><%=profile_user.email%></h6> -->

    </div>
    <hr>
    <strong style="font-size: 20px;">
        <%if(!(user.id==profile_user.id)){%>
        <%=profile_user.name%>
        <%}%>
    </strong>

    <div id="updateFormDiv">

        <%if(user.id==profile_user.id){%>
            <!-- if user match then show update form -->
            <form action="/users/update/<%=profile_user.id%>" enctype="multipart/form-data" method="POST">
                <h2>Update Profile</h2>

                <table>

                    <tr>
                        <td>
                            <label for="name">Name</label>
                        </td>
                        <td>
                            <input name="name" id="name" required type="text" placeholder="Enter your full name"
                                value="<%=profile_user.name%>">
                        </td>
                    </tr>


                    <tr>
                        <td>
                            <label for="email">Email </label>
                        </td>
                        <td>
                            <input name="email" id="email" required type="email" placeholder="Enter your email address "
                                value="<%=profile_user.email%>">
                        </td>
                    </tr>


                    <tr>
                        <td>
                            <label for="phone">Mobile No</label>
                        </td>
                        <td>
                            <input id="phone" name="phone" type="text" placeholder="Enter your mobile number "
                                value="<%=profile_user.phone%>">
                        </td>
                    </tr>


                    <tr>
                        <td>
                            <label for="dob">Date of Birth</label>
                        </td>
                        <td>
                            <input id="dob" name="dob" type="date" placeholder="Enter your date of birth"
                                value="<%=profile_user.dob%>">
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="avatar">Profile picture</label>
                        </td>
                        <td>
                            <input id="avatar" type="file" name="avatar" placeholder="Profile picture">

                        </td>
                    </tr>
               

                    <tr>
                        <td>
                            <button type="submit"
                            value="https://thumbs.dreamstime.com/z/default-avatar-profile-icon-vector-social-media-user-portrait-176256935.jpg"
                            name="update-button" id="submit-button">
                            Update
                        </button>
                        </td>
                          
                    </tr>
                       
                    
                </table>



            </form>
            <%}%>
    </div>

      
      
</div>
